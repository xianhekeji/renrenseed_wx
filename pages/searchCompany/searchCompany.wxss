/* /pages/searchCompany/searchCompany.wxss */
@import "/wxSearch/wxSearch.wxss";
@import "/pages/movie-rating/movie-rating-template.wxss";

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-style: solid;
  border-width: 1px;
}

.item_content {
  min-height: 160rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 20rpx;
}

.item_content_1 {
  margin-top: 10rpx;
  min-height: 160rpx;
  width: 80%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.content {
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
}

.item_img {
  height: 180rpx;
  width: 180rpx;
  margin: 5rpx;
}

.item_right {
  display: flex;
  flex-direction: column;
}

.call {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
}

.enterprise_status_img {
  width: 50rpx;
  height: 50rpx;
  max-width: 50rpx;
  max-height: 50rpx;
}

.en_name {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}
